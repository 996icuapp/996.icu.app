<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f8f8f8"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="你每个月到底该拿多少钱？"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView

            android:id="@+id/work_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:cardElevation="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:contentPadding="16dp">

            <ImageView
                android:id="@+id/iv_picker"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_result"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/work_picker_container"
        android:layout_margin="16dp"
        app:contentPadding="16dp">

        <ImageView
            android:id="@+id/iv_decri"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_launcher_foreground"/>

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/ic_download_code"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/share_prompt"/>

</LinearLayout>